{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "jsx": "react",
      "lib": [
        "es6",
        "dom"
      ],
      "module": "es6",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "target": "es6"
    },
    "exclude": [
      "node_modules"
    ]
}